<UserControl x:Class="QuizGameWPF.PlayGBGQuizView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizGameWPF"
             mc:Ignorable="d" 
             d:DesignHeight="640" 
             d:DesignWidth="360" 
             Background="LightBlue">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Return to menu row-->
            <RowDefinition Height="50"/>
            <!-- Content row-->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Return to menu row-->
        <Grid Grid.Row="0" Background="White" Grid.ColumnSpan="2">
            <Button Content="Return to Menu" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                    Background="White" 
                    BorderThickness="0" 
                    FontWeight="Bold" 
                    Margin="0,0,10,0"
                    Click="ReturnToMenu_Click" Height="20"
                    />
            
            <!-- Game Score-->
            <Border  Margin="10,10,150,0"
                     VerticalAlignment="Top"
                     Height="28" 
                     CornerRadius="10" 
                     Background="LightGray">
                <TextBlock 
                     x:Name="Points" 
                     Text="{Binding ScoreText}"  
                     TextWrapping="Wrap" 
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Center" 
                     TextAlignment="Center" 
                     FontWeight="Bold"
                     />
            </Border>
        </Grid>

        <!-- Content row-->
        <Grid Grid.Row="1">
            <Grid>
                <Border Margin="15,15,15,15" CornerRadius="10" Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Quiz title row-->
                            <RowDefinition Height="50"/>
                            <!-- QUestion category row-->
                            <RowDefinition Height="40"/>
                            <!-- Image row-->
                            <RowDefinition Height="*"/>
                            <!-- Question row-->
                            <RowDefinition Height="100"/>
                            <!-- Answers row-->
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Quiz title row-->
                        <Grid Grid.Row="0" Margin="5,15,5,5" >
                            <TextBox 
                                 TextWrapping="Wrap" 
                                 Text="{Binding QuizTitle, Mode=OneWay}" 
                                 IsReadOnly="True"
                                 FontSize="18"
                                 FontWeight="Bold" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Center" 
                                 BorderThickness="0" 
                                 />
                        </Grid>

                        <!-- Heading Question Number row-->
                        <Grid Grid.Row="1" Margin="5,5,5,5">
                            <TextBox 
                                 TextWrapping="Wrap" 
                                 Text="{Binding Category, Mode=OneWay}" 
                                 IsReadOnly="True"
                                 FontSize="14"
                                 FontWeight="Bold" 
                                 VerticalAlignment="Center" 
                                 HorizontalAlignment="Center" 
                                 BorderThickness="0" 
                                 />
                        </Grid>

                        <!-- Picture row -->
                        <Grid Grid.Row="2">
                            <Image
                               Source="{Binding CurrentQuestion.AbsoluteImagePath}" 
                               Stretch="Uniform"/>
                        </Grid>

                        <!-- Question row -->
                        <Grid Grid.Row="3" Margin="20,10,20,8">
                            <TextBlock 
                                 Text="{Binding CurrentQuestion.QuestionText}" 
                                 TextWrapping="Wrap" 
                                 TextAlignment="Center"
                                 FontWeight="Bold"
                                 FontSize="15"
                                 Foreground="Black"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 />
                        </Grid>

                        <!-- Answers row -->
                        <StackPanel Grid.Row="4" Margin="20,8,20,8">
                            <!-- 1st answer button -->
                            <Button
                                 x:Name="AnswerButton" 
                                 Content="{Binding CurrentQuestion.Answers[0]}"
                                 Height="40" 
                                 Margin="0,5" 
                                 BorderThickness="0"
                                 FontSize="13"
                                 FontWeight="Bold"
                                 Click="AnswerButton_Click" Tag="0">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            
                            <!-- 2nd answer button -->
                            <Button 
                                 x:Name="Answer2Button" 
                                 Content="{Binding CurrentQuestion.Answers[1]}"
                                 Height="40" 
                                 Margin="0,5" 
                                 BorderThickness="0"
                                 FontSize="13"
                                 FontWeight="Bold"
                                 Click="AnswerButton_Click" 
                                 Tag="1">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            
                            <!-- 3rd answer button -->
                            <Button 
                                 x:Name="Answer3Button" 
                                 Content="{Binding CurrentQuestion.Answers[2]}"
                                 Height="40" 
                                 Margin="0,5" 
                                 BorderThickness="0"
                                 FontSize="13"
                                 FontWeight="Bold"
                                 Click="AnswerButton_Click" 
                                 Tag="2">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="10"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
