<UserControl x:Class="QuizGameWPF.EditQuestion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizGameWPF"
             mc:Ignorable="d" 
             d:DesignHeight="640" 
             d:DesignWidth="360" 
             Background="LightBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="White">
            <Button Content="Return to Menu" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Right"
                Background="White" 
                BorderThickness="0" 
                FontWeight="Bold" 
                Margin="0,0,10,0"
                Click="ReturnToMenu_Click" Height="20"
                />
        </Grid>

        <Grid Grid.Row="1">
            <Border Margin="15,110,15,110" CornerRadius="10" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="150"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>

                    <!-- Heading row-->
                    <Grid Grid.Row="0" Margin="0">
                        <TextBox 
                    TextWrapping="Wrap" 
                    Text="Question editing" 
                    FontSize="20"
                    FontWeight="Bold" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    BorderThickness="0" 
                    />
                    </Grid>

                    <!-- Play row -->
                    <Grid Grid.Row="1" Margin="20,5,20,5">
                        <Button Content="Find question by ID" FontWeight="Bold" FontSize="14">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Edit question row -->
                    <Grid Grid.Row="2" Margin="20,5,20,5">
                        <Button Content="Find question by category" FontWeight="Bold" FontSize="14">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>

                    <!-- Add new question row -->
                    <Grid Grid.Row="3" Margin="20,5,20,5">
                        <Button Content="List all questions" FontWeight="Bold" FontSize="14">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="5" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
